  end

  a = 0
  case:"c"
  when "a"
    x = 1
  else
    x = 3
  end

  x = *
  case
  when true
    x = 1
  end

  x = 0
  case
  when 0 == 1
    x = 1
  when 1 == 1
    x = 2
  end

  x = 0
  case
  when 0 == 1
    x = 1
  else
    x = 3
  end

  x = 0
  case 4
  when 1, 3, 5
    x = 1
  when 2, 4, 6
    x = 2
  end

  x = :int
  odds  = [ 1, 3, 5, 7, 9 ]
  evens = [ 2, 4, 6, 8 ]
  case 5
